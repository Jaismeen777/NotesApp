<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>
<body>
   <div class="main">
    <div class="form">
        <form action="/create" method="post">
            <input class="block" type="text" placeholder="Title goes here" name="title">
            <textarea class="block" placeholder="Write your task details here" name="details"></textarea>
            <input type="submit" value="Create Task">
        </form>
    </div>
    <div class="tasks">
        <table>
            <tr>
    <% if(files.length>0){ %>
        <% files.forEach(function(val, index){ %>
            <td>
                <div class="task">
                    <h1>Task <%= index + 1 %></h1>
                    <h2 color="white"><%= val %></h2>
                    <div class="flex w-full justify-between items-center">
                    <a href="/file/<%= val %>">Read More</a>
                    <a class="edit" href="/edit/<%= val %>">edit filename</a>
                </div>
                </div>
                </td>
        <% }) %>
    <% } else { %>
        <td><h3>No tasks yet</h3></td>
    <% } %>
</tr>
</table>
    </div>
   </div>
</body>
</html>